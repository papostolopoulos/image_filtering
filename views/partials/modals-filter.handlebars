<!-- Filter > Edge Detection -->
<div class="modal" id="edgeDetection">
  <div class="modal-container">
    <form name="edgeDetection" id="edgeDetectionForm">
      <label for="edgeThresholdInput">
        Threshold: <input type="range" min="5" value="10" max="30" step="1" name="edgeThresholdInput" id="edgeThresholdInput"/>
      </label>
      <label for="edgeThresholdValue">
        <input type="number" size="3" width="3" value="10" name="edgeThresholdValue" id="edgeThresholdValue"/>
      </label>
      <a href="#modal-close"><input type="submit" name="edgeDetectionSubmit" value="Submit" class="submitButton"/></a>
      <a href="#modal-close"><input type="button" name="closeButton" value="Close" /></a>
    </form>
  </div>
</div>

<!-- Filter > Pixelate -->
